{{> header}}

<head>
  <div class="right-navbar">
    <h1>Gallery</h1><br>
    <a href="/" class="bigbutton">Home</a>
    <a href="/start" class="bigbutton">New Game</a>
  </div>
</head>
<!-- page content -->
<br><br>
<div class="container">
  <div class="row">
    <div id="game-list" class="col-md-12">
      <script id="game-template" type="text/x-handlebars-template">
        \{{#each games}}
        \{{#ifDraw _draw.pngD_1 _draw.pngD_2 _draw.pngD_3}}
          <div class="draw-container">
            <img height="100" width="150" src="\{{_draw.pngD_1}}">
            <img height="100" width="150" src="\{{_draw.pngD_2}}">
            <img height="100" width="150" src="\{{_draw.pngD_3}}">
          </div>
        \{{/ifDraw}}
        \{{/each}}
      </script>
    </div>
  </div>
</div>

<!-- custom script -->
<script type="text/javascript" src="scripts/gallery.js"></script>
</body>

</html>
